{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "api/**/*.ts",
    "routes/**/*.ts",
    "googleAuth/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}